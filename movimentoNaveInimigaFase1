// Refatorando o c√≥digo do movimento da nave par melhor entendimento
	define TrajetoBoss1
		set BossXVel to  10 * 0.5
		set BossYVel to -10 * 0.5
		go to x: 160 y: 147

	define TrajetoBoss2
		set BossXVel to -10 * 0.5
		set BossYVel to -10 * 0.5
		go to x: -160 y: 147

	define TrajetoBoss3
		set BossXVel to  10 * 0.5
		set BossYVel to -10 * 0.5
		go to x: 0 y: 147


	define TrajetoBoss4
		set BossXVel to -10 * 0.5
		set BoxxYVel to -10 * 0.5
		go to x:0 y: 147

	define Movimento 1
		show
		repeat 44
			if not contatoBoolean =  1
				change y by BossYVel
			else
				repeat 24
					turn right 15 degress
			hide
			wait 0.01 seconds
		repeat 11
			if not contatoBoolean = 1
				change x by BossXVel
			else
				repeat 24
					turn 15 rigth degress
				wait 0.01
				hide	

	
	define Movimento2
		show
		repeat 44
			if not contatoBoolean  = 1
				change x by BossXVel
				change y by BossYVel
			else
				repeat 24
					turn right 15 degrees
				wait 0.01
				hide
				wait 0.01
		repeat 11
			if not contatoBoolean = 1
				change x by BossXVel
			else
				repeat 24
					turn right 15 degrees
				wait 0.01 seconds
				hide
				wait 0.01

	when flag clicked
		go to x: 160 y: 147
		repeat 2
			TrajetoBoss1
			Movimento1
		repeat 2
			TrajetoBoss2
			Movimento1
		repeat 2
			TrajetoBoss3
			Movimento2
		repeat 2
			TrajetoBoss4
			Movimento2
		hide

