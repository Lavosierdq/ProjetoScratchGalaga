// Refatorando o código para melhorar o entendimento e a leitura

	define TiroVelocidade_Y    //aqui é uma funcao
		change Coordenada_Y_tiro by 1
		set Coordenada_Y_tiro to (Coordenada_Y_Tiro * 0.85)

	define ContatoComNaveInimiga True
		set contatoBoolean t0o 1
		hide
		wait 0.2 seconds
		go to x: Coordenada_X_Nave_Posicao y:-87
		show
		set contatoBoolean to 0
	define Pontuacao true
		set Score to Score + 100
		if Score mod 500 = 0
			repeat Lifes  < 5
				set Lifes  to Lifes + 1

	when flag clicked
		go to x:0 y:-87
		forever
			if not XVel = xposition then
				change x by XVel
			if x position > 215
				set x to 215
		
			if x position < -215
				set x to -215

	when space key pressed
		go to x: Coordenada_X_Nave_Posicao y:-87
		set Coordenada_Y_Tiro to 0
		forever
			TiroVelocidade_Y
			change y by Coordenada_Y_Tiro
		if touching BossGalaga? then
			ContatoComNaveInimiga // chamada da funcao
			Pontuacao // chamada da funcao
			stop this script
		if y position > 100
			go to x:Coordenada_X_Nave_Posicao y: -877
			stop this script
		


//quando a tecla space for acionada a nave irá soltar um tiro
