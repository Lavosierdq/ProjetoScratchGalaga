// refatorando o código para melhor entendimento	

	define VelocidadeNave_X VNx // aqui é uma funcao
	change XVel by VNX
	set Xvel to (XVel * 0.91)
	

	when flag clicked
	go to x: 0 y:-128
	set XVel to 0
	forever
		if key right arrow pressed? or key d pressed?
			Velocidade_X 1
		if x position > 215
			set x to 215
		if key left arrow pressed? or key a pressed?
			Velocidade_X -1
		if x position < 215
			set x to -215
		change x by Xvel
		set Coodernada_X_Nave_Posicao to x position




// Adicionado evento para movimentar a nave na posicao X e pegar a posicao
   Atual da Nave.

// Variavel Cooernada_X_Nave_Posicao criada nas opcoes de variáveis
   /* Quanto a tecla esquerda for pressionada

      When left arrow key pressed
      change X by -7
      if x position < -215 then
      set x to -215
      set Coodernada_X_Nave_posicao to x position
   */

// quanto a tecla direita for pressionada

   /* 
      When left arrow key pressed
      change X by 7
      if x position > 215 then
      set x to 215
      set Coodernada_X_Nave_posicao to x position
    */

// Melhorando o código para movimento da nave
